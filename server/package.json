{
  "name": "tourist-safety-backend",
  "version": "1.0.0",
  "description": "Enhanced Tourist Safety System Backend with Real API Integrations",
  "main": "enhanced-server.js",
  "scripts": {
    "start": "node enhanced-server.js",
    "dev": "nodemon enhanced-server.js",
    "old-server": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo 'No build step required for Node.js backend'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "db:migrate": "node migrations/run.js",
    "db:seed": "node seeds/run.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "init-db": "node scripts/init-database.js",
    "setup": "npm install && npm run db:migrate && npm run db:seed",
    "logs": "tail -f logs/app.log",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "backup:db": "node scripts/backup-database.js",
    "restore:db": "node scripts/restore-database.js",
    "health": "curl http://localhost:5000/api/health"
  },
  "keywords": [
    "tourist",
    "safety",
    "emergency",
    "location",
    "weather",
    "real-time",
    "api",
    "geofencing",
    "emergency-detection",
    "iot",
    "travel",
    "security"
  ],
  "author": "Tourist Safety Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "axios": "^1.6.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "twilio": "^4.19.0",
    "nodemailer": "^6.9.7",
    "ws": "^8.14.2",
    "socket.io": "^4.7.2",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "csv-parser": "^3.0.0",
    "json2csv": "^6.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "node-cron": "^3.0.3",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "@types/jest": "^29.5.8",
    "sqlite3": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tourist-safety-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/tourist-safety-system/issues"
  },
  "homepage": "https://github.com/yourusername/tourist-safety-system#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "routes/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "logs/*",
      "coverage/*",
      "*.test.js"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    }
  }
}